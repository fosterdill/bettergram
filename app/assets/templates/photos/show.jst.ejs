<div class="modal-body">
  <div class="row">
    <div id="image-area" class="col-xs-6">
      <img src="<%= photo.get('images').standard_resolution.url %>">
    </div>
    <div id="comment-area" class=" col-xs-5 col-xs-offset-1">
      <h2>Comments (<%= photo.get('comments').length %>):</h2>
      <% console.log(photo) %>
      <ul id="comments-list">
        <% photo.get('comments').each(function (comment) { %>
            <li><%= comment.get('body') %></li>
        <% }); %>
      </ul>
    <form>
      <input 
        type="hidden" 
        name="authenticity_token" 
        value="<%= $('[name=csrf-token]').attr('content') %>">
      <input
        id="body-comment"
        type="text"
        name="comment">
      <input
        id="create-comment"
        type="submit"
        value="Comment">
    </form>
    </div>
  </div>
</div>
