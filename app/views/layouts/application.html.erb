<!DOCTYPE html>
<html>
<head>
  <title>Bettergram</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render 'layouts/navbar' %>

<ul>
  <% [:errors, :messages].each do |message_type| %>
    <% next if flash[message_type].nil? %>
    <% flash[message_type].each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>
</ul>

<%= yield %>

</body>
</html>
